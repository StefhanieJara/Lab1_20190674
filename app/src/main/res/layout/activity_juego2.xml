<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JuegoActivity2"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="32dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="307dp"
            android:layout_height="311dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/antena" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="73dp"
            android:layout_height="72dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginStart="204dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="-11dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/cabeza" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginStart="222dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="-1dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/torso" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginStart="211dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="111dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/brazoderecho" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginStart="205dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="47dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/piernaderecha" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="57dp"
            android:layout_height="42dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginStart="241dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="-12dp"
            android:layout_marginBottom="112dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/brazoizquierdo" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="54dp"
            android:layout_height="28dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginStart="240dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="-16dp"
            android:layout_marginBottom="49dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/piernaizquierda" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="61dp"
            android:layout_height="93dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="240dp"
            android:onClick="estadistica"
            app:srcCompat="@drawable/baseline_timeline_24" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/palabras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" />

    <GridView
        android:id="@+id/letras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@android:color/black"
        android:numColumns="6"
        android:padding="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        />

</LinearLayout>
